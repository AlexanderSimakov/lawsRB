<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LawsRB" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/steel_blue</item>
        <item name="colorPrimaryVariant">@color/teal_blue</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/teal_blue</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>

        <!-- Surface color -->
        <item name="colorOnSurface">@color/black</item>
        <item name="colorSurface">?attr/backgroundColor</item>
        <item name="colorSurfaceVariant">@color/light_green</item>

        <!-- Background color -->
        <item name="backgroundColor">@color/white</item>
        <item name="android:colorBackground">?attr/backgroundColor</item>

    </style>

    <style name="Theme.LawsRB.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- App bar -->
    <style name="Theme.LawsRB.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="elevation">0dp</item>
    </style>

    <!-- Tool bar -->
    <style name="Theme.LawsRB.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
    </style>

    <!-- CardView styles -->
    <style name="Theme.LawsRB.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="Theme.LawsRB.CardView.Article" parent="Theme.LawsRB.CardView">
        <item name="cardBackgroundColor">?attr/colorSurface</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <style name="Theme.LawsRB.CardView.Item" parent="Theme.LawsRB.CardView">
        <item name="cardElevation">2dp</item>
    </style>

    <style name="Theme.LawsRB.CardView.Item.Light" parent="Theme.LawsRB.CardView.Item">
        <item name="cardBackgroundColor">?attr/colorSurface</item>
    </style>

    <style name="Theme.LawsRB.CardView.Item.Dark" parent="Theme.LawsRB.CardView.Item">
        <item name="cardBackgroundColor">?attr/colorSurfaceVariant</item>
    </style>

    <style name="Theme.LawsRB.CardView.Title" parent="Widget.MaterialComponents.TextView">
        <item name="android:text">@string/card_default_title</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="Theme.LawsRB.CardView.Subtitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:text">@string/card_default_content</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="Theme.LawsRB.CardView.Article.Content" parent="Widget.MaterialComponents.TextView">
        <item name="android:text">@string/card_default_expandable_text</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>

    <!-- Navigation header styles -->
    <style name="Theme.LawsRB.NavHeader" parent="Theme.MaterialComponents.DayNight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:background">?attr/colorPrimaryVariant</item>
        <item name="android:gravity">bottom</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">24dp</item>
    </style>

    <style name="Theme.LawsRB.NavHeader.Title" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:text">@string/nav_header_title</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>

    <style name="Theme.LawsRB.NavHeader.ThemeButton" parent="Theme.MaterialComponents.DayNight">
        <item name="android:layout_marginLeft">90dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
        <item name="android:background">@drawable/theme_toggle_button</item>
    </style>

    <!-- Tab layout styles -->
    <style name="Theme.LawsRB.TabLayout.Light" parent="Theme.MaterialComponents.DayNight">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="tabTextColor">@color/light_grey</item>
        <item name="tabSelectedTextColor">?attr/colorOnPrimary</item>
        <item name="tabIndicatorColor">?attr/colorOnPrimary</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabIndicatorFullWidth">false</item>
    </style>
</resources>