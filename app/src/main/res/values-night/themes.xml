<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LawsRB" parent="Theme.Material3.DayNight">

        <!-- Ban to change theme with enabled "Dark mode" -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/dark_active</item>
        <item name="colorPrimaryVariant">@color/dark_active</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">?attr/colorSecondary</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>

        <!-- Surface color -->
        <item name="colorOnSurface">@color/white</item>

        <!-- Item and Article color -->
        <item name="colorSurface">@color/almost_black</item>

        <!-- Title color -->
        <item name="colorSurfaceVariant">@color/dark_active</item>

        <!-- Background color -->
        <item name="backgroundColor">@color/dark</item>
        <item name="android:colorBackground">?attr/backgroundColor</item>

    </style>
</resources>