<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LawsRB" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">#2B2B2B</item>
        <item name="colorPrimaryVariant">#292929</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">?attr/colorSecondary</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>

        <!-- Surface color -->
        <item name="colorOnSurface">@color/white</item>

        <!-- Item and Article color -->
        <item name="colorSurface">#0F0F0F</item>

        <!-- Title color -->
        <item name="colorSurfaceVariant">#2B2B2B</item>

        <!-- Background color -->
        <item name="backgroundColor">#1E1E1E</item>
        <item name="android:colorBackground">?attr/backgroundColor</item>

    </style>
</resources>